body {
    background-color: rgba(224, 222, 222, 0.979);
}

h1 {
    color: #F5F5F5;
    text-align: center;
}

.form-content {
    width: 400px;
    height: 300px;
    padding: 50px;
    display: run-in;
    border: 1px solid black;
    position: absolute;
    top: calc(50% - 200px);
    left: calc(50% - 150px);
}

.card {
    position: relative;
    background-color: rgba(47, 1, 71, 0.952);
}

.btn.btn-secondary {
    float: right;
}